/* Pick from a table */
let table = base.getTable("משפחות נתמכות 🎁");
let record = await input.recordAsync('Pick a record', table);
if (record) {
    //import fields records
    console.log(`You picked ${record.getCellValueAsString("קוד נתמך (אוטומטי)")}`);
   

 
    
    //Get Records fields 
    let response = await fetch('WEBHOOK URL ADDRESS', {
        method: 'POST',
        body: JSON.stringify({
            "FullName": record.getCellValueAsString('שם מלא'),
            "Phone": record.getCellValueAsString('טלפון'), 
            "City": record.getCellValueAsString('עיר'),
            "Adress":record.getCellValueAsString('כתובת'),
            "RecordId" : record.id
     
        }),
        headers:{
            'Content-Type' : 'application/json'
        } 
    });
    }
